# =============================================================================
# ValoML Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys

# -----------------------------------------------------------------------------
# API KEYS (Required)
# -----------------------------------------------------------------------------

# GRID Esports Data API Key
# Get yours at: https://grid.gg/
GRID_API_KEY=your_grid_api_key_here

# Groq API Key for LLM (Llama 3.3)
# Get yours at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# -----------------------------------------------------------------------------
# BACKEND CONFIGURATION
# -----------------------------------------------------------------------------

# Backend port (default: 8081 for Docker, 8000 for local dev)
BACKEND_PORT=8081

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------

# API URL for frontend to connect to backend
# For LOCAL development:
#   NEXT_PUBLIC_API_URL=http://localhost:8000
#
# For DOCKER deployment:
#   NEXT_PUBLIC_API_URL=http://localhost:8081
#
# For CLOUD deployment (replace with your server IP):
#   NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:8081

NEXT_PUBLIC_API_URL=http://localhost:8081
